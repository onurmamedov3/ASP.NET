@{
    ViewData["Title"] = "Home";
}

<head>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<div class="container mt-5">
    <!-- Hero Section -->
    <div class="row justify-content-center text-center mb-5">
        <div class="col-md-8">
            <h1 class="display-4 text-primary mb-4">Welcome to the Computer Inventory System</h1>
            <p class="lead mb-4">
                Manage your computer inventory effortlessly. From adding new items to tracking current stock, we've got you covered.
            </p>
            <a asp-controller="Computer" asp-action="Index" class="btn btn-lg btn-primary px-5 py-3">
                <i class="fas fa-laptop"></i> Go to Computer Inventory
            </a>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row text-center">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h4 class="card-title"><i class="fas fa-plus-circle"></i> Add Computers</h4>
                    <p class="card-text">Easily add new computers to your inventory and manage your stock.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h4 class="card-title"><i class="fas fa-edit"></i> Update Inventory</h4>
                    <p class="card-text">Update details and manage existing computers in your inventory.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <h4 class="card-title"><i class="fas fa-search"></i> View Details</h4>
                    <p class="card-text">Quickly view and search for specific computers in your inventory.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer Section -->
<footer class="bg-dark text-white py-4">
    <div class="container text-center">
        <p class="mb-0">&copy; 2025 Computer Inventory System | All rights reserved.</p>
    </div>
</footer>
