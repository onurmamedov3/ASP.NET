@model List<MyAspProject.Models.Computer>

@{
    ViewData["Title"] = "Home";
}

@if (Model == null || !Model.Any())
{
    <p>No computers found.</p>
}
else
{
    <head>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" asp-append-version="true" />
        <!-- Font Awesome for Icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
        <style>
            /* Add cursor pointer to navbar links */
            .navbar-nav .nav-link {
                cursor: pointer;
            }
        </style>
    </head>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="fas fa-desktop"></i> Inventory System
            </a>
            <ul class="navbar-nav flex-row">
                <li class="nav-item mx-2">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item mx-2">
                    <a class="nav-link" href="/Home/About"  asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item mx-2">
                    <a class="nav-link" href="/Home/Contact"  asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid mt-5 pt-4">
        <!-- Your page content goes here -->
    </div>
    <!-- Hero Section -->
    <div class="container mt-5 pt-5">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-8">
                <h1 class="display-4 text-primary mb-4">Welcome to the Computer Inventory System</h1>
                <p class="lead mb-4">
                    Manage your computer inventory effortlessly. From adding new items to tracking stock, we've got you covered.
                </p>
                <a asp-controller="Computer" asp-action="Index" class="btn btn-lg btn-primary px-5 py-3">
                    <i class="fas fa-laptop"></i> Go to Computer Inventory
                </a>
            </div>
        </div>
    </div>

    <!-- Brands Section -->
    <div class="container">
        <h2 class="text-center mb-4">Popular Computer Brands</h2>
        <div class="row text-center">
            @foreach (var computer in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm border-light">
                        <!-- Add your image here -->
                        <img src="~/images/brands/@(computer.Brand.ToLower()).jpg" class="card-img-top" alt="@computer.Brand">
                        <div class="card-body">
                            <h4 class="card-title"><i class="fas fa-check-circle"></i> @computer.Brand</h4>
                            <p class="card-text">@computer.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Features Section -->
    <div class="container">
        <h2 class="text-center mt-5 mb-4">Our Features</h2>
        <div class="row text-center">
            <!-- Feature 1 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-search"></i> Advanced Search</h4>
                        <p class="card-text">Easily search and filter through your inventory with our powerful search tools.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-chart-line"></i> Real-Time Analytics</h4>
                        <p class="card-text">Track inventory performance with real-time analytics and reports.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-cogs"></i> Customizable Workflows</h4>
                        <p class="card-text">Customize workflows to fit your business needs and improve efficiency.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-sync-alt"></i> Automatic Updates</h4>
                        <p class="card-text">Keep your inventory up-to-date with automatic synchronization.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 5 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-shield-alt"></i> Secure Data</h4>
                        <p class="card-text">Your data is safe with our advanced security protocols and encryption.</p>
                    </div>
                </div>
            </div>

            <!-- Feature 6 -->
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card shadow-sm border-light">
                    <div class="card-body">
                        <h4 class="card-title"><i class="fas fa-users"></i> Multi-User Support</h4>
                        <p class="card-text">Collaborate with your team using multi-user access and role-based permissions.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">&copy; 2025 Computer Inventory System | All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap Script -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}