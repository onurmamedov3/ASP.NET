@{
    ViewData["Title"] = "Contact Us";
}


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" asp-append-version="true" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<!-- Hero Section -->
<div class="hero-section bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Contact Us</h1>
        <p class="lead">Have questions? We'd love to hear from you!</p>
    </div>
</div>

<!-- Contact Form -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Send Us a Message</h2>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" rows="5" placeholder="Enter your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
        <div class="col-md-6">
            <!-- Map -->
            <h2>Our Location</h2>
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.8354345093747!2d144.95373531531664!3d-37.816279742021665!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf577d2a6c8e2299e!2sMelbourne%20VIC%2C%20Australia!5e0!3m2!1sen!2sus!4v1633033451234!5m2!1sen!2sus"
                        width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>

<!-- Contact Information -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Contact Information</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <h4><i class="fas fa-map-marker-alt"></i> Address</h4>
                <p>123 Main Street, Melbourne, VIC 3000, Australia</p>
            </div>
            <div class="col-md-4">
                <h4><i class="fas fa-phone"></i> Phone</h4>
                <p>+61 123 456 789</p>
            </div>
            <div class="col-md-4">
                <h4><i class="fas fa-envelope"></i> Email</h4>
                <p>support@inventorysystem.com</p>
            </div>
        </div>
    </div>
</div>

<!-- Social Media Links -->
<div class="container my-5">
    <h2 class="text-center mb-5">Follow Us</h2>
    <div class="text-center">
        <a href="#" class="btn btn-outline-primary mx-2"><i class="fab fa-facebook"></i> Facebook</a>
        <a href="#" class="btn btn-outline-primary mx-2"><i class="fab fa-twitter"></i> Twitter</a>
        <a href="#" class="btn btn-outline-primary mx-2"><i class="fab fa-linkedin"></i> LinkedIn</a>
        <a href="#" class="btn btn-outline-primary mx-2"><i class="fab fa-instagram"></i> Instagram</a>
    </div>
</div>