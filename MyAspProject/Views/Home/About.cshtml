@{
    ViewData["Title"] = "About Us";
}


<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" asp-append-version="true" />
    <!-- Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<!-- Hero Section -->
<div class="hero-section bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">About Us</h1>
        <p class="lead">We are a team of passionate developers dedicated to building amazing software solutions.</p>
    </div>
</div>

<!-- Mission and Vision -->
<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <h2>Our Mission</h2>
            <p class="lead">
                To simplify inventory management for businesses of all sizes by providing innovative and user-friendly solutions.
            </p>
        </div>
        <div class="col-md-6">
            <h2>Our Vision</h2>
            <p class="lead">
                To become the global leader in inventory management software, empowering businesses to achieve their full potential.
            </p>
        </div>
    </div>
</div>

<!-- Team Members -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Meet Our Team</h2>
        <div class="row">
            <!-- Team Member 1 -->
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Team Member 1">
                <h4>John Doe</h4>
                <p class="text-muted">CEO & Founder</p>
            </div>
            <!-- Team Member 2 -->
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Team Member 2">
                <h4>Jane Smith</h4>
                <p class="text-muted">CTO</p>
            </div>
            <!-- Team Member 3 -->
            <div class="col-md-4 text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle mb-3" alt="Team Member 3">
                <h4>Mike Johnson</h4>
                <p class="text-muted">Lead Developer</p>
            </div>
        </div>
    </div>
</div>

<!-- Statistics -->
<div class="container my-5">
    <h2 class="text-center mb-5">Our Achievements</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <h3 class="display-4">500+</h3>
            <p class="lead">Happy Clients</p>
        </div>
        <div class="col-md-4">
            <h3 class="display-4">10K+</h3>
            <p class="lead">Projects Completed</p>
        </div>
        <div class="col-md-4">
            <h3 class="display-4">100+</h3>
            <p class="lead">Team Members</p>
        </div>
    </div>
</div>

<!-- Testimonials -->
<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">What Our Clients Say</h2>
        <div class="row">
            <!-- Testimonial 1 -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"The best inventory management system we've ever used. Highly recommended!"</p>
                        <p class="text-muted">- Client A</p>
                    </div>
                </div>
            </div>
            <!-- Testimonial 2 -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"Amazing support and a truly innovative product. Great job!"</p>
                        <p class="text-muted">- Client B</p>
                    </div>
                </div>
            </div>
            <!-- Testimonial 3 -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <p class="card-text">"This software has transformed our business operations. Thank you!"</p>
                        <p class="text-muted">- Client C</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>